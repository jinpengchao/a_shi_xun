<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:background="#ffffff"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".user.LoginByCodeActivity">
    <ImageView
        android:id="@+id/main_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ImageView>
    <RelativeLayout
        android:background="@drawable/login_bg"
        android:layout_width="wrap_content"
        android:paddingBottom="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text1"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:textColor="@color/notChoseColor"
            android:layout_marginLeft="30dp"
            android:text="密码登录"
            android:textSize="30dp"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/text2"
            android:layout_below="@id/text1"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="33dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/notChoseColor"
                android:text="手机号"
                android:textSize="15dp"
                android:layout_height="wrap_content"/>
            <h.jpc.vhome.chat.utils.ClearWriteEditText
                android:id="@+id/etPhone"
                android:maxLength="11"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="30dp"
                android:hint="请填写手机号"
                android:textSize="15dp"
                android:background="@null"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="30dp">
            </h.jpc.vhome.chat.utils.ClearWriteEditText>
        </LinearLayout>
        <View
            android:layout_below="@+id/text2"
            android:id="@+id/text3"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="2dp"></View>

        <RelativeLayout
            android:layout_below="@id/text3"
            android:id="@+id/text4"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/m"
                android:layout_width="match_parent"
                android:layout_marginLeft="33dp"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/notChoseColor"
                    android:text="密码"
                    android:textSize="15dp"
                    android:layout_height="wrap_content"/>
                <h.jpc.vhome.chat.utils.ClearWriteEditText
                    android:id="@+id/etPwd"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:maxLength="18"
                    android:hint="输入密码"
                    android:background="@null"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">
                </h.jpc.vhome.chat.utils.ClearWriteEditText>
            </LinearLayout>
            <ToggleButton
                android:layout_alignParentRight="true"
                android:layout_marginRight="70dp"
                android:layout_gravity="center"
                android:id="@+id/togglePwd"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:background="@drawable/toggle_pwd_selector"
                android:padding="10dp"
                android:textOff=""
                android:textOn="" />
        </RelativeLayout>
        <View
            android:layout_below="@id/text4"
            android:id="@+id/text5"
            android:layout_marginTop="15dp"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="2dp"></View>
        <TextView
            android:layout_below="@id/text5"
            android:id="@+id/use_code"
            android:layout_width="wrap_content"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="20dp"
            android:textSize="15dp"
            android:textColor="#00B0FF"
            android:text="使用验证码登录"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <Button
        android:layout_above="@id/text66"
        android:id="@+id/pwdLogin"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登录"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:background="@drawable/button_press"
        >
    </Button>

    <LinearLayout
        android:id="@+id/text66"
        android:layout_above="@id/text7"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >
        <View
            android:layout_marginLeft="33dp"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#ffffff">
        </View>
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="社交账号登录"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
        </TextView>
        <View
            android:layout_marginRight="33dp"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#ffffff">
        </View>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text7"
        android:layout_above="@id/text8"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/vxLogo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/wx"></ImageView>

        <ImageView
            android:layout_toRightOf="@+id/vxLogo"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="4dp"
            android:src="@mipmap/qq"></ImageView>
    </RelativeLayout>

    <LinearLayout
        android:background="@drawable/login_bg"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="5dp"
        android:id="@+id/text8"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/findBackPwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/notChoseColor"
            android:text="找回密码">
        </TextView>
        <View
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="2dp"
            android:layout_height="20dp"
            android:background="@color/colorPrimary">
        </View>
        <TextView
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/notChoseColor"
            android:text="用户注册">
        </TextView>
    </LinearLayout>
</RelativeLayout>
