<?xml version="1.0" encoding="utf-8"?>
<com.vhome.vhome.user.personal.widget.DisInterceptNestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/middle_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="180dp"
    android:tag="middle"
    app:layout_collapseMode="parallax"
    app:layout_collapseParallaxMultiplier="0.5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:minHeight="40dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:id="@+id/frag_uc_nickname_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="37dp"
                android:text="Lover's Day"
                android:textColor="@color/colorBlack33"
                android:textSize="17sp" />
            <ImageView
                android:id="@+id/gender"
                android:layout_width="@dimen/adaptive_22dp"
                android:layout_height="@dimen/adaptive_22dp"
                android:layout_toRightOf="@id/frag_uc_nickname_tv"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="@dimen/adaptive_3dp"
                ></ImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="37dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sixin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_stroke_roundcir_attention"
                    android:gravity="center"
                    android:text="私信"
                    android:textColor="@color/colorBlack33" />
                <TextView
                    android:id="@+id/frag_uc_follow_tv"
                    style="@style/TextTheme"
                    android:layout_width="70dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/attention_add_shape"
                    android:padding="7dp"
                    android:text="+关注"
                    android:textColor="#ffffff"
                    android:visibility="visible"
                    tools:visibility="visible" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

            <TextView
                android:id="@+id/frag_uc_interest_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="2dp"
                android:maxLines="2"
                android:paddingLeft="15dp"
                android:text="music、dance、drive、fly~O(∩_∩)O~"
                android:textColor="#aa333333"
                android:textSize="13sp" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">
            <ImageView
                android:layout_width="wrap_content"
                android:paddingLeft="@dimen/adaptive_5dp"
                android:id="@+id/icon_loc"
                android:src="@drawable/location"
                android:layout_height="20dp">
            </ImageView>
            <TextView
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_toRightOf="@id/icon_loc"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="中国，河北，定州"
                android:textColor="#aa333333"
                android:textSize="13sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">
            <ImageView
                android:layout_width="wrap_content"
                android:paddingLeft="@dimen/adaptive_5dp"
                android:id="@+id/icon_date"
                android:src="@drawable/date"
                android:layout_height="19dp">
            </ImageView>
            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_toRightOf="@id/icon_date"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="2020年4月 加入"
                android:textColor="#aa333333"
                android:textSize="13sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">
            <ImageView
                android:layout_width="wrap_content"
                android:paddingLeft="@dimen/adaptive_5dp"
                android:id="@+id/icon_age"
                android:src="@drawable/age"
                android:layout_marginLeft="@dimen/adaptive_13dp"
                android:layout_height="16dp">
            </ImageView>
            <TextView
                android:id="@+id/age"
                android:layout_width="match_parent"
                android:layout_toRightOf="@id/icon_age"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="@dimen/adaptive_13dp"
                android:text="50 周岁"
                android:textColor="#aa333333"
                android:textSize="13sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">
            <ImageView
                android:layout_width="wrap_content"
                android:paddingLeft="@dimen/adaptive_5dp"
                android:id="@+id/icon_fatie"
                android:layout_marginLeft="13dp"
                android:src="@mipmap/lv6_true"
                android:layout_height="20dp">
            </ImageView>
            <TextView
                android:id="@+id/lv_fatie"
                android:layout_width="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/icon_fatie"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/adaptive_1dp"
                android:layout_marginBottom="10dp"
                android:text="发帖专家"
                android:textColor="#aa333333"
                android:textSize="13sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">
            <TextView
                android:id="@+id/fans"
                android:paddingLeft="19dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="0"
                android:textColor="#000000"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/t1"
                android:paddingLeft="5dp"
                android:layout_toRightOf="@id/fans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="粉丝"
                android:textColor="#aa333333"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/attentions"
                android:paddingLeft="19dp"
                android:layout_toRightOf="@id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="0"
                android:textColor="#000000"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/t2"
                android:paddingLeft="5dp"
                android:layout_toRightOf="@id/attentions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="关注"
                android:textColor="#aa333333"
                android:textSize="13sp" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorBg" />

    </LinearLayout>
</com.vhome.vhome.user.personal.widget.DisInterceptNestedScrollView>