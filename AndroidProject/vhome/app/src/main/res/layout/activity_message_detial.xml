<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#171a21">
        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/back"
            android:layout_centerVertical="true"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/hd_icon_title_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"
            android:layout_toRightOf="@id/back"
            android:layout_centerVertical="true"
            android:textColor="#ffffff"
            android:text="消息详情"
            android:layout_height="wrap_content">
        </TextView>
    </RelativeLayout>
    <ScrollView
        android:layout_below="@id/rl1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:text="【微家官方】您的问题反馈已被处理"
                android:textSize="18sp"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:id="@+id/author"
                android:layout_below="@id/title"
                android:layout_width="match_parent"
                android:textColor="@color/app_color_green"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:text="客服小薇"
                android:textSize="13sp"
                android:layout_height="wrap_content">
            </TextView>
            <View
                android:id="@+id/v1"
                android:layout_below="@id/author"
                android:layout_width="match_parent"
                android:background="#c9c9c9"
                android:layout_height="@dimen/adaptive_1dp"></View>
            <TextView
                android:id="@+id/t4"
                android:layout_below="@id/v1"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:text="反馈主题："
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:id="@+id/theme"
                android:layout_toRightOf="@id/t1"
                android:layout_below="@id/v1"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:text="叭叭叭叭"
                android:layout_marginLeft="5dp"
                android:textSize="15sp"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:id="@+id/t1"
                android:layout_below="@id/t4"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:text="反馈内容："
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:id="@+id/content"
                android:layout_toRightOf="@id/t1"
                android:layout_below="@id/theme"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:text="叭叭叭叭"
                android:layout_marginLeft="5dp"
                android:textSize="15sp"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:id="@+id/t2"
                android:layout_below="@id/t1"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:text="预留电话："
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:id="@+id/phone"
                android:layout_toRightOf="@id/t2"
                android:layout_below="@id/t1"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:text="13000000000"
                android:layout_marginLeft="5dp"
                android:textSize="15sp"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:id="@+id/t3"
                android:layout_below="@id/t2"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:text="预留姓名："
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:id="@+id/name"
                android:layout_toRightOf="@id/t3"
                android:layout_below="@id/phone"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:text="靳先生"
                android:layout_marginLeft="5dp"
                android:textSize="15sp"
                android:layout_height="wrap_content"></TextView>
            <View
                android:layout_marginTop="10dp"
                android:id="@+id/v2"
                android:layout_below="@id/t3"
                android:layout_width="match_parent"
                android:background="#c9c9c9"
                android:layout_height="@dimen/adaptive_1dp"></View>
            <TextView
                android:id="@+id/answer"
                android:layout_below="@id/v2"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:text="靳先生，您好："
                android:layout_marginLeft="11dp"
                android:textSize="15sp"
                android:layout_height="wrap_content"></TextView>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
