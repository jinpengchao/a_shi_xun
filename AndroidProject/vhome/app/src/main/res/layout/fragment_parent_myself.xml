<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">
    <RelativeLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:background="#20ffffff"><!--#20ffffff-->
        <ImageView android:id="@+id/iv_blur"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <LinearLayout
            android:id="@+id/f1"
            android:layout_width="match_parent"
            android:layout_height="170dp">
            <ImageView
                android:src="@mipmap/icon"
                android:id="@+id/parent_head"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp">
            </ImageView>
            <LinearLayout
                android:layout_toRightOf="@id/parent_head"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/parent_name"
                    android:textColor="#ffffff"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:text="春天的野草"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                </TextView>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:gravity="center"
                        android:textSize="20dp"
                        android:layout_marginLeft="10dp"
                        android:text="ID:"
                        android:layout_width="match_parent"
                        android:layout_height="40dp">
                    </TextView>
                    <TextView
                        android:id="@+id/parent_id"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:text="123456"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp">
                    </TextView>
                    <ImageView
                        android:layout_gravity="center"
                        android:src="@mipmap/location"
                        android:id="@+id/parent_sex"
                        android:layout_marginLeft="20dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp">
                    </ImageView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_below="@id/f2"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="成就：">
            </TextView>
            <TextView
                android:textColor="#FF0000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="运动达人"
                >
            </TextView>
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="地区：">
            </TextView>
            <TextView
                android:id="@+id/parent_area"
                android:textColor="#FF0000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="黑龙江"
                >
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_below="@id/f1"
            android:id="@+id/f2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="关注：">
            </TextView>
            <TextView
                android:textColor="#FF0000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="10"
                >
            </TextView>
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="粉丝：">
            </TextView>
            <TextView
                android:textColor="#FF0000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="28W"
                >
            </TextView>
        </LinearLayout>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            >
            <ImageView
                android:id="@+id/msg1"
                android:src="@mipmap/message"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp">
            </ImageView>
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/msg1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:text="我的消息">
            </TextView>
            <ImageView
                android:src="@mipmap/right"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentRight="true">
            </ImageView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            >
            <ImageView
                android:src="@mipmap/post"
                android:id="@+id/post1"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp">
            </ImageView>
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/post1"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:text="我的帖子">
            </TextView>
            <ImageView
                android:layout_alignParentRight="true"
                android:src="@mipmap/right"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp">
            </ImageView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            >
            <ImageView
                android:background="@mipmap/favourite"
                android:id="@+id/favourite1"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/favourite1"
                android:text="我的收藏"
                android:textSize="25dp"></TextView>

            <ImageView
                android:layout_alignParentRight="true"
                android:src="@mipmap/right"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp">
            </ImageView>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/my_relation"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            >
            <ImageView
                android:src="@mipmap/gl"
                android:id="@+id/wdgl1"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp">
            </ImageView>
            <TextView

                android:layout_toRightOf="@id/wdgl1"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:text="我的关联">
            </TextView>
            <ImageView
                android:src="@mipmap/right"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp">
            </ImageView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            >
            <ImageView
                android:src="@mipmap/changepsw"
                android:id="@+id/changepwd1"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp">
            </ImageView>
            <TextView
                android:layout_toRightOf="@id/changepwd1"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:text="修改密码">
            </TextView>
            <ImageView
                android:src="@mipmap/right"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp">
            </ImageView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            >
            <ImageView
                android:id="@+id/seting1"
                android:src="@mipmap/seting"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp">
            </ImageView>
            <TextView
                android:layout_toRightOf="@id/seting1"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:text="进入设置">
            </TextView>
            <ImageView
                android:layout_alignParentRight="true"
                android:src="@mipmap/right"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp">
            </ImageView>
        </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>