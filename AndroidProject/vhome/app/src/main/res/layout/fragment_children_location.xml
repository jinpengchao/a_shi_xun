<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <include layout="@layout/activity_antitle"></include>

    </LinearLayout>
    <com.baidu.mapapi.map.MapView
        android:layout_weight="0.9"
        android:id="@+id/loc_map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_weight="0.1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <Spinner
            android:layout_weight="0.45"
            android:id="@+id/bt_fath"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:spinnerMode="dropdown"
            android:popupBackground="@color/color_grey_eaeaea"
            android:text="查看父亲"
            android:textAlignment="center"
            android:background="@color/color_b3b3b3"
            android:dropDownSelector="@color/choseColor"/>
        <TextView
            android:layout_weight="0.1"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:background="@color/choseColor"/>

        <Spinner
            android:layout_weight="0.45"
            android:id="@+id/bt_moth"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:spinnerMode="dropdown"
            android:dropDownSelector="@color/choseColor"
            android:popupBackground="@color/color_grey_eaeaea"
            android:text="查看母亲"
            android:background="@color/color_b3b3b3"/>
    </LinearLayout>


</LinearLayout>