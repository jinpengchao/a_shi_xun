<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eff2f6"
    android:orientation="vertical" >
    
	<RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_bar"
        android:background="@color/top_bar_normal_bg"
        android:gravity="center_vertical" >

        <include layout="@layout/ease_commom_back_btn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/title_user_profile"
            android:textColor="#fff"
            android:textSize="18sp" />
    </RelativeLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#f4f4f4"
        android:orientation="vertical"
        >
        <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:background="#ffffff"
            android:paddingBottom="10dp"
            >
            <ImageView
                android:id="@+id/user_head_avatar"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_margin="8dip"
                android:scaleType="centerCrop"
                android:src="@drawable/rc_default_portrait"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:id="@+id/l1"
                android:layout_below="@id/user_head_avatar"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/user_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textColor="#000000"
                    android:text="测试测试测试测"
                    android:textSize="16sp"
                    />
                <ImageView
                    android:id="@+id/user_gender"
                    android:layout_marginTop="@dimen/adaptive_3dp"
                    android:layout_marginLeft="@dimen/adaptive_3dp"
                    android:layout_width="@dimen/adaptive_20dp"
                    android:layout_height="@dimen/adaptive_20dp"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/unknown"
                    android:layout_toRightOf="@id/user_username"
                    android:layout_centerVertical="true"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/adaptive_3dp"
                android:layout_below="@id/l1"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/t1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#808080"
                    android:text="备注："
                    android:textSize="16sp"
                    />
                <TextView
                    android:id="@+id/friends_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/user_username"
                    android:layout_toRightOf="@id/t1"
                    android:textColor="#808080"
                    android:text="测测测测测"
                    android:textSize="16sp"
                    />
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="@dimen/adaptive_15dp"
            android:id="@+id/set_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:paddingTop="10dp"
            android:paddingBottom="10dip"
            >
            <TextView 
				android:layout_width="wrap_content"                
				android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/adaptive_15dp"
				android:layout_alignParentLeft="true"
				android:text="设置备注"
				android:textSize="16sp"
				android:gravity="center_vertical"
				android:textColor="#000000"
                android:background="#FFFFFF"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/em_ic_right_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/adaptive_15dp"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/relation"
            style="@style/TextTheme"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="@dimen/adaptive_90dp"
            android:layout_marginLeft="@dimen/adaptive_30dp"
            android:layout_marginRight="@dimen/adaptive_30dp"
            android:layout_height="@dimen/adaptive_50dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/attention_add_shape"
            android:padding="7dp"
            android:text="+关注"
            android:textColor="#ffffff"
            android:visibility="visible"
            tools:visibility="visible" />
        <TextView
            android:id="@+id/voice_conversation"
            style="@style/TextTheme"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="@dimen/adaptive_30dp"
            android:layout_marginLeft="@dimen/adaptive_30dp"
            android:layout_marginRight="@dimen/adaptive_30dp"
            android:layout_height="@dimen/adaptive_50dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/attention_add_shape"
            android:padding="7dp"
            android:text="语音通话"
            android:textColor="#ffffff"
            android:visibility="visible"
            tools:visibility="visible" />
        <TextView
            android:id="@+id/video_conversation"
            style="@style/TextTheme"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="@dimen/adaptive_30dp"
            android:layout_marginLeft="@dimen/adaptive_30dp"
            android:layout_marginRight="@dimen/adaptive_30dp"
            android:layout_height="@dimen/adaptive_50dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/attention_add_shape"
            android:padding="7dp"
            android:text="视频通话"
            android:textColor="#ffffff"
            android:visibility="visible"
            tools:visibility="visible" />
    </LinearLayout>
</LinearLayout>
