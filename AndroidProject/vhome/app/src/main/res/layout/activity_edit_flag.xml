<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#2D2F31">
        <ImageView
            android:id="@+id/back"
            android:src="@drawable/back1"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/adaptive_60dp"
            android:layout_height="@dimen/adaptive_40dp">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:textSize="18dp"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            android:text="个性签名"
            android:layout_height="wrap_content">
        </TextView>
        <Button
            android:id="@+id/nickname_finish"
            android:layout_width="@dimen/adaptive_60dp"
            android:layout_height="@dimen/adaptive_40dp"
            android:text="完成"
            android:textColor="#ffffff"
            android:background="@drawable/background_color"
            android:gravity="center"
            android:textSize="@dimen/adaptive_18dp"
            android:padding="@dimen/adaptive_3dp"
            android:layout_marginRight="@dimen/adaptive_30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            ></Button>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/nickname"
        android:layout_marginTop="@dimen/adaptive_10dp"
        android:layout_below="@id/rl1"
        android:background="@drawable/selector_stroke_roundcir"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/adaptive_20dp"
        android:layout_marginRight="@dimen/adaptive_20dp"
        android:layout_height="350dp">
        <EditText
            android:id="@+id/ed_nickname"
            android:layout_width="match_parent"
            android:textSize="@dimen/adaptive_17dp"
            android:layout_marginTop="@dimen/adaptive_5dp"
            android:layout_height="wrap_content"
            android:maxLength="255"
            android:text="签名签名签名签名签名签名签名签名签名签名签名签名签名签名签名签名签名签名签名签名"
            android:textColor="#cc333333" />
        <TextView
            android:id="@+id/max_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="100/255"
            android:textColor="#03A9F4"
            android:textSize="@dimen/adaptive_14dp"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</RelativeLayout>
