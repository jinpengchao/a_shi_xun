<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splash_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/em_splash" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dip"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >
        <ImageView
            android:layout_width="@dimen/adaptive_30dp"
            android:background="@drawable/em_logo_uidemo"
            android:layout_height="@dimen/adaptive_30dp">

        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="#000"
            android:textSize="15sp"
            android:layout_marginLeft="@dimen/adaptive_2dp"
            android:typeface="normal" >
        </TextView>
    </LinearLayout>

</RelativeLayout>