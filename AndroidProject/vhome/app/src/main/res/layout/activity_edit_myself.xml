<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#2D2F31">
        <ImageView
            android:id="@+id/back"
            android:src="@drawable/back1"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/adaptive_60dp"
            android:layout_height="@dimen/adaptive_40dp">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:textSize="18dp"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            android:text="个人信息"
            android:layout_height="wrap_content">
        </TextView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/head"
        android:layout_below="@id/rl1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#ffffff">
        <com.vhome.vhome.user.personal.widget.CircleImageView
            android:id="@+id/head_icon"
            android:src="@mipmap/header"
            android:layout_marginTop="@dimen/adaptive_30dp"
            android:layout_centerHorizontal="true"
            android:layout_width="100dp"
            android:layout_height="100dp">
        </com.vhome.vhome.user.personal.widget.CircleImageView>
        <ImageView
            android:layout_width="@dimen/adaptive_30dp"
            android:src="@drawable/changeheader"
            android:layout_toRightOf="@id/head_icon"
            android:layout_below="@id/head_icon"
            android:layout_marginLeft="-25dp"
            android:layout_marginTop="-25dp"
            android:layout_height="@dimen/adaptive_30dp">

        </ImageView>
        <TextView
            android:id="@+id/vhome_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/head_icon"
            android:layout_centerHorizontal="true"
            android:background="@drawable/selector_stroke_roundcir"
            android:layout_marginTop="@dimen/adaptive_30dp"
            android:gravity="center"
            android:text="微家ID:123456"
            android:textColor="#cc333333" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/nickname"
        android:layout_marginTop="@dimen/adaptive_10dp"
        android:layout_below="@id/head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/adaptive_60dp"
        android:background="#ffffff">
        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:textSize="@dimen/adaptive_20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/adaptive_10dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="昵称" />
        <TextView
            android:id="@+id/nick_nam"
            android:layout_width="wrap_content"
            android:textSize="@dimen/adaptive_20dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/t1"
            android:layout_marginLeft="@dimen/adaptive_50dp"
            android:layout_height="wrap_content"
            android:textColor="#cc333333"
            android:text="春天的野菜" />
    </RelativeLayout>
    <View
        android:id="@+id/v1"
        android:layout_below="@id/nickname"
        android:layout_marginLeft="@dimen/adaptive_97dp"
        android:layout_width="match_parent"
        android:background="#d0d0d0"
        android:layout_height="@dimen/adaptive_1dp">
    </View>
    <RelativeLayout
        android:id="@+id/signal"
        android:layout_below="@id/v1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/adaptive_60dp"
        android:background="#ffffff">
        <TextView
            android:id="@+id/t2"
            android:layout_width="wrap_content"
            android:textSize="@dimen/adaptive_20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/adaptive_10dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="签名" />
        <TextView
            android:id="@+id/signature"
            android:layout_width="wrap_content"
            android:textSize="@dimen/adaptive_20dp"
            android:maxLines="1"
            android:maxEms="12"
            android:ellipsize="end"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/t2"
            android:layout_marginLeft="@dimen/adaptive_50dp"
            android:layout_height="wrap_content"
            android:textColor="#cc333333"
            android:text="我是一朵春天的野菜~~" />
    </RelativeLayout>
    <View
        android:id="@+id/v2"
        android:layout_below="@id/signal"
        android:layout_marginLeft="@dimen/adaptive_97dp"
        android:layout_width="match_parent"
        android:background="#d0d0d0"
        android:layout_height="@dimen/adaptive_1dp">
    </View>
    <RelativeLayout
        android:id="@+id/gender"
        android:layout_below="@id/v2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/adaptive_60dp"
        android:background="#ffffff">
        <TextView
            android:id="@+id/t3"
            android:layout_width="wrap_content"
            android:textSize="@dimen/adaptive_20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/adaptive_10dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="性别" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/sex_icon"
            android:src="@drawable/unknowsex"
            android:layout_toRightOf="@id/t3"
            android:layout_marginLeft="@dimen/adaptive_50dp"
            ></ImageView>
        <TextView
            android:id="@+id/sexs"
            android:layout_width="wrap_content"
            android:textSize="@dimen/adaptive_20dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/sex_icon"
            android:layout_marginLeft="@dimen/adaptive_10dp"
            android:layout_height="wrap_content"
            android:textColor="#cc333333"
            android:text="保密" />
    </RelativeLayout>
    <View
        android:id="@+id/v3"
        android:layout_below="@id/gender"
        android:layout_marginLeft="@dimen/adaptive_97dp"
        android:layout_width="match_parent"
        android:background="#d0d0d0"
        android:layout_height="@dimen/adaptive_1dp">
    </View>
    <RelativeLayout
        android:id="@+id/birth"
        android:layout_below="@id/v3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/adaptive_60dp"
        android:background="#ffffff">
        <TextView
            android:id="@+id/t4"
            android:layout_width="wrap_content"
            android:textSize="@dimen/adaptive_20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/adaptive_10dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="生日" />
        <TextView
            android:id="@+id/birthday"
            android:layout_width="wrap_content"
            android:textSize="@dimen/adaptive_20dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/t4"
            android:layout_marginLeft="@dimen/adaptive_50dp"
            android:layout_height="wrap_content"
            android:textColor="#cc333333"
            android:text="保密" />
    </RelativeLayout>
    <View
        android:id="@+id/v4"
        android:layout_below="@id/birth"
        android:layout_width="match_parent"
        android:background="#d0d0d0"
        android:layout_height="@dimen/adaptive_1dp">
    </View>
    <RelativeLayout
        android:id="@+id/city"
        android:layout_below="@id/birth"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/adaptive_10dp"
        android:layout_height="@dimen/adaptive_60dp"
        android:background="#ffffff">
        <TextView
            android:id="@+id/t5"
            android:layout_width="wrap_content"
            android:textSize="@dimen/adaptive_20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/adaptive_10dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="地区" />
        <TextView
            android:id="@+id/city_name"
            android:layout_width="wrap_content"
            android:textSize="@dimen/adaptive_20dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/t5"
            android:layout_marginLeft="@dimen/adaptive_50dp"
            android:layout_height="wrap_content"
            android:textColor="#cc333333"
            android:text="保密" />
    </RelativeLayout>
</RelativeLayout>
