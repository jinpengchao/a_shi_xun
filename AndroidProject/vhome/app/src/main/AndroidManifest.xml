<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="h.jpc.vhome">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".user.SetNewPwdActivity"></activity>
        <activity android:name=".user.FindBackPwdActivity" />
        <activity android:name=".user.LoginByCodeActivity" />
        <activity android:name=".user.CheckPhoneActivity" />
        <activity android:name=".user.RegisterActivity" />
        <activity android:name=".parents.fragment.alarm.ReadAlarm" />
        <activity android:name=".parents.fragment.alarm.ClockDetail" />
        <activity android:name=".parents.fragment.alarm.AlarmActivity" />
        <activity android:name=".parents.fragment.tools.AllToolsActivity" />
        <activity android:name=".parents.fragment.alarm.AlarmAlert" />
        <activity android:name=".children.ChildrenMain" />
        <activity android:name=".parents.ParentMain" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".children.fragment.WarnFragment" />

        <receiver
            android:name=".parents.fragment.alarm.CallAlarm"
            android:process=".remote" />

        <service
            android:name=".parents.fragment.alarm.AlarmService"
            android:enabled="true"
            android:exported="true" />
    </application>
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>